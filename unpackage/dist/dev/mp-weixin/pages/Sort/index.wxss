#sortContainer {
  width: 750rpx;
  height: 100%;
  position: relative;
}
#sortContainer .sortHead {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  vertical-align: middle;
  width: 750rpx;
  height: 88rpx;
  background: #fff;
  border-bottom: 1rpx solid rgba(0,0,0,0.15);
  position: fixed;
  left: 0;
  top: 0;
  z-index: 1;
}
#sortContainer .sortHead .headContent {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  width: 690rpx;
  height: 56rpx;
  line-height: 56rpx;
  margin: auto;
  font-size: 28rpx;
  border-radius: 8rpx;
  color: #666;
  background: #ededed;
}
#sortContainer .sortHead .headContent .input {
  height: 56rpx;
  line-height: 56rpx;
  margin: 0 auto;
}
#sortContainer .sortHead .headContent .input image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
}
#sortContainer .sortContent {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  width: 750rpx;
  height: 1148rpx;
  position: absolute;
  left: 0;
  top: 88rpx;
}
#sortContainer .sortContent .left {
  width: 162rpx;
  height: 1148rpx;
  background: #fff;
  border-right: 1rpx solid rgba(0,0,0,0.15);
}
#sortContainer .sortContent .left .BScroll {
  width: 162rpx;
  height: 1120rpx;
}
#sortContainer .sortContent .left .BScroll .leftList {
  width: 162rpx;
  padding: 40rpx 0;
}
#sortContainer .sortContent .left .BScroll .leftList .leftItem {
  list-style: none;
  width: 162rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  text-align: center;
  margin-bottom: 30rpx;
}
#sortContainer .sortContent .left box-sizing border-box {
  color: #333;
}
#sortContainer .sortContent .left .leftItem:first-child {
  color: #ab2b2b;
  border-left: 6rpx solid #ab2b2b;
}
#sortContainer .sortContent .right {
  width: 588rpx;
  height: 1148rpx;
}

